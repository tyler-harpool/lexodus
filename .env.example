DATABASE_URL=postgres://dioxus:dioxus@localhost:5432/lexodus
# OpenTelemetry / SigNoz
# Local: http://localhost:4317
# SigNoz Cloud: https://ingest.{region}.signoz.cloud:443
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=lexodus
# SigNoz Cloud ingestion key (leave blank for local collector)
SIGNOZ_INGESTION_KEY=
RUST_LOG=info,server=debug,app=debug
JWT_SECRET=change-me-in-production-use-a-long-random-string
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# OAuth (optional — leave blank to disable OAuth buttons)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8080/auth/callback/google
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_GITHUB_REDIRECT_URL=http://localhost:8080/auth/callback/github

# S3-compatible storage
# Local dev (MinIO): set the S3_* vars below
# Fly.io prod (Tigris): `fly storage create` auto-sets AWS_* vars — no manual config needed
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=avatars
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
# Fly/Tigris equivalents (auto-set by `fly storage create`):
# AWS_ENDPOINT_URL_S3=https://fly.storage.tigris.dev
# BUCKET_NAME=<auto>
# AWS_ACCESS_KEY_ID=<auto>
# AWS_SECRET_ACCESS_KEY=<auto>
# AWS_REGION=auto

# Cookie settings
COOKIE_SECURE=false
COOKIE_DOMAIN=

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...
APP_BASE_URL=http://localhost:8080

# Admin auto-promotion — set to an email address to auto-promote that user to admin on register/login
ADMIN_EMAIL=tylerharpool@gmail.com

# Mailgun
MAILGUN_API_KEY=key-...
MAILGUN_DOMAIN=mg.lexodus.app
MAILGUN_FROM=Lexodus <noreply@lexodus.app>
MAILGUN_WEBHOOK_SIGNING_KEY=

# App branding (used in SMS, emails, etc.)
APP_NAME=Lexodus

# Twilio
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+1...

# API versioning — set to false to disable unversioned /api/* alias
API_ENABLE_UNVERSIONED=true
